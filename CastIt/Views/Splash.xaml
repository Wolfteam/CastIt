<views:MvxWpfView
    x:Class="CastIt.Views.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:vms="clr-namespace:CastIt.ViewModels"
    x:TypeArguments="vms:SplashViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image
            MaxWidth="450"
            MaxHeight="400"
            Margin="60,0,60,0"
            Source="/Resources/AppIcon.png"
            Stretch="Fill" />
        <TextBlock Grid.Row="1" Text="{Binding LoadingText}" />
        <ProgressBar
            Grid.Row="2"
            Height="4"
            Margin="0,0,0,2"
            Foreground="{DynamicResource WindowLightBackground}"
            IsIndeterminate="True" />
    </Grid>
</views:MvxWpfView>
