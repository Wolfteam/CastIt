<UserControl
    x:Class="CastIt.Views.UserControls.FileItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CastIt.Views.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="80"
    d:DesignWidth="550"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.ContextMenu>
            <ContextMenu StaysOpen="False">
                <MenuItem Header="Play the file">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Play" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Play from the begining">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Refresh" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Add Files">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Add" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Remove">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Delete" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Remove all that are missing">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="DeleteEmpty" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Select All">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="SelectAll" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Show in Explorer">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Folder" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.InputBindings>
            <MouseBinding Command="{Binding PlayFileCommand}" MouseAction="LeftDoubleClick" />
        </Grid.InputBindings>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Separator
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Style="{StaticResource FileItemSeparatorStyle}"
            Visibility="{Binding IsSeparatorTopLineVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <ToggleButton
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding Index}"
            IsChecked="{Binding IsSelected}"
            Style="{StaticResource MaterialDesignActionLightToggleButton}"
            ToolTip="Select" />

        <StackPanel
            x:Name="FileItemStackPanel"
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Foreground="White"
                Text="{Binding Filename}"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                Style="{StaticResource FileItemSubTextStyle}"
                Text="{Binding Size}"
                TextTrimming="CharacterEllipsis" />
            <TextBlock
                Style="{StaticResource FileItemSubTextStyle}"
                Text="{Binding Path}"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Foreground="White"
            Text="24:00"
            TextTrimming="CharacterEllipsis" />

        <ProgressBar
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="0,5,0,0"
            Style="{StaticResource AppProgressBarStyle}"
            Value="23" />

        <Separator
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Style="{StaticResource FileItemSeparatorStyle}"
            Visibility="{Binding IsSeparatorBottomLineVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
