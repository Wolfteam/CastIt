<UserControl
    x:Class="CastIt.Views.UserControls.MainProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CastIt.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Slider
            x:Name="MainSilder"
            Focusable="True"
            Foreground="Red"
            IsEnabled="{Binding IsCurrentlyPlaying, Mode=OneWay}"
            IsMoveToPointEnabled="True"
            Maximum="{Binding CurrentFileDuration, Mode=OneWay}"
            Minimum="0"
            MouseLeave="MainSilder_MouseLeave"
            MouseMove="MainSilder_MouseMove"
            PreviewMouseUp="MainSilder_PreviewMouseUp"
            Style="{StaticResource CustomSliderStyle}"
            Value="{Binding CurrentPlayedSeconds, Mode=OneWay}" />

        <Popup
            Name="SliderPopup"
            AllowsTransparency="True"
            HorizontalOffset="0"
            IsOpen="False"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=MainSilder}"
            StaysOpen="True">
            <Grid Width="200" Height="150">
                <Image Source="{Binding PlacementTarget.DataContext.PreviewThumbnailImg, ElementName=SliderPopup, Converter={StaticResource StringToImgConverter}}" />
                <TextBlock
                    x:Name="SliderPopupText"
                    Margin="0,0,5,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    FontWeight="Bold"
                    Foreground="White" />
            </Grid>
        </Popup>
    </Grid>
</UserControl>
