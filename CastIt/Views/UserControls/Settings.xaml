<views:MvxWpfView
    x:Class="CastIt.Views.UserControls.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CastIt.Views.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:CastIt.Models"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:vms="clr-namespace:CastIt.ViewModels"
    Width="480"
    Height="420"
    d:DesignHeight="420"
    d:DesignWidth="480"
    x:TypeArguments="vms:SettingsViewModel"
    mc:Ignorable="d">

    <views:MvxWpfView.Resources>
        <Style x:Key="TogleButtonTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </views:MvxWpfView.Resources>

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource WindowLightBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <materialDesign:ColorZone
            Grid.Row="0"
            Padding="16"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="{DynamicResource PrimaryHueDarkBrush}">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Cog" Style="{StaticResource ColorZoneIconStyle}" />
                <TextBlock Style="{StaticResource ColorZoneTextBlockWithIconStyle}" Text="{Binding [Settings]}" />
            </StackPanel>
        </materialDesign:ColorZone>
        <ScrollViewer
            Grid.Row="1"
            Padding="16"
            materialDesign:ScrollViewerAssist.IsAutoHideEnabled="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="{Binding [Theme]}"
                    DisplayMemberPath="Text"
                    ItemsSource="{Binding Themes}"
                    SelectedItem="{Binding CurrentTheme}"
                    SelectedValuePath="Id"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5,0"
                    HorizontalAlignment="Stretch"
                    materialDesign:HintAssist.Hint="{Binding [Language]}"
                    DisplayMemberPath="Text"
                    ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding CurrentLanguage}"
                    SelectedValuePath="Id"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
                <TextBlock
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10"
                    Text="{Binding [AccentColors]}" />
                <ItemsControl
                    x:Name="AccentColorsIc"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding AccentColors}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton
                                x:Name="AccentColorButton"
                                Margin="0,0,0,5"
                                VerticalAlignment="Center"
                                Background="{Binding}"
                                Command="{Binding DataContext.AccentColorChangedCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                CommandParameter="{Binding}"
                                Foreground="{DynamicResource FontColorBrush}"
                                Style="{StaticResource MaterialDesignActionDarkToggleButton}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Grid
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        IsChecked="{Binding ShowFileDetails}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="{Binding [ShowFileDetails]}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource TogleButtonTextStyle}"
                        Text="{Binding [ShowFileDetails]}" />
                </Grid>
                <Grid
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        IsChecked="{Binding ForceVideoTranscode}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="{Binding [ForceVideoTranscode]}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource TogleButtonTextStyle}"
                        Text="{Binding [ForceVideoTranscode]}" />
                </Grid>
                <Grid
                    Grid.Row="4"
                    Grid.ColumnSpan="1"
                    Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        IsChecked="{Binding StartFilesFromTheStart}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="{Binding [PlayFilesFromTheStart]}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource TogleButtonTextStyle}"
                        Text="{Binding [PlayFilesFromTheStart]}" />
                </Grid>
                <Grid
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        IsChecked="{Binding ForceAudioTranscode}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="{Binding [ForceAudioTranscode]}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource TogleButtonTextStyle}"
                        Text="{Binding [ForceAudioTranscode]}" />
                </Grid>
                <Grid
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Margin="0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ToggleButton
                        IsChecked="{Binding PlayNextFileAutomatically}"
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        ToolTip="{Binding [PlayNextFileAutomatically]}" />
                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource TogleButtonTextStyle}"
                        Text="{Binding [PlayNextFileAutomatically]}" />
                </Grid>
                <Button
                    Grid.Row="6"
                    Grid.ColumnSpan="2"
                    Width="150"
                    Margin="0,5"
                    VerticalAlignment="Bottom"
                    Command="{Binding OpenAboutDialogCommand}"
                    Content="{Binding [About]}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="{Binding [About]}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</views:MvxWpfView>
